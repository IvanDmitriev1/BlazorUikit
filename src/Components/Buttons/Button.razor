@namespace BlazorUiKit.Components
@inherits ButtonBase

<Element Class="@ComponentCss"
         HtmlTag="@HtmlTag"

         type="@Type.ToHtml()"
         href="@Href"
         target="@HrefTarget.ToHtml()"
         disabled="@Disabled"
         data-enhance-nav="@(!HrefOutside)"

         @onclick="OnClick">
    @ChildContent
</Element>

@code
{
    [Parameter]
    public Size Size { get; set; } = Size.Medium;

    protected override void AddComponentCssClasses(ref CssBuilder cssBuilder)
    {
        base.AddComponentCssClasses(ref cssBuilder);

        cssBuilder.AddClass(Size.ToTailwindCss());
    }
}
