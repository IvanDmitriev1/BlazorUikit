@namespace UiKit.Components
@inherits ButtonBase

@if (OnClickJs is not null)
{
    <Element Class="@ComponentCss"
             HtmlTag="@HtmlTag"
             type="@Type.ToHtml()"
             href="@Href"
             target="@HrefTarget.ToHtml()"
             disabled="@Disabled"
             onclick="@OnClickJs">
        <UiKitIcon Icon="Icon" Size="Size"/>
        @ChildContent
    </Element>
}
else
{
    <Element Class="@ComponentCss"
             HtmlTag="@HtmlTag"
             type="@Type.ToHtml()"
             href="@Href"
             target="@HrefTarget.ToHtml()"
             disabled="@Disabled"
             @onclick="OnClick">
        <UiKitIcon Icon="Icon" Size="Size"/>
        @ChildContent
    </Element>
}

@code
{
    [Parameter, EditorRequired]
    public TablerIconType Icon { get; set; }

    [Parameter]
    public bool Filled { get; set; } = true;

    [Parameter]
    public Size Size { get; set; } = Size.Medium;

    protected override void AddComponentCssClasses(ref CssBuilder cssBuilder)
    {
        cssBuilder.AddClass("w-fit");
        cssBuilder.AddClass("flex flex-row items-center");

        if (!Filled)
            return;

        base.AddComponentCssClasses(ref cssBuilder);
        cssBuilder.AddClass("p-1.5");
    }
}