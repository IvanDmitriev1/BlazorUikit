@namespace BlazorUiKit.Components

@code
{
    public static readonly RenderFragment<IReadOnlyList<string>> DisplayValidationErrorsFragment = errors =>
        @<Stack Class="@Css" Direction="Direction.Column">
            @foreach (var error in errors)
            {
                <UiText Color="Color.Inherit" HtmlTag="span">@error</UiText>
            }
        </Stack>;

    private static readonly string Css = $"{ThemeManager.ThemeProvider.ToTextCss(Color.Error)} empty:hidden mt-1";
}
